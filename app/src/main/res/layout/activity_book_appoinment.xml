<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book an Appoinment"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When do you want to come ???"
                android:textColor="@color/textColor"
                android:textSize="20dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chose yours"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:layout_marginTop="40dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/textbox"
                android:id="@+id/au"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Select a day"
                android:textSize="18dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:inputType="none"
                android:paddingLeft="13dp"
                android:editable="false"
                android:id="@+id/getDate"
                android:paddingRight="15dp"
                android:textColor="@color/textColor"
                android:background="@drawable/textbox"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a time"
                android:textColor="@color/textColor"
                android:textSize="18dp"
                android:layout_marginTop="20dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/getTime"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:entries="@array/shoptimeselection"
                android:paddingRight="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/textbox"
                android:textSize="20dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow android:layout_marginTop="40dp">
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:layout_marginLeft="60dp"
                        android:outlineAmbientShadowColor="@color/textColor"
                        android:outlineSpotShadowColor="#fff"
                        android:id="@+id/Progressba" />
                    <TextView android:text="Checking Availability"
                        android:textColor="@color/textColor"
                        android:visibility="invisible"
                        android:layout_marginTop="12dp"
                        android:textSize="17dp"
                        android:id="@+id/ProgressbaText"
                        android:layout_marginLeft="20dp"/>
                </TableRow>
                <TableRow>
                    <TextView/>
                    <Button
                        android:layout_marginLeft="90dp"
                        android:text="next"
                        android:textSize="20dp"
                        android:background="@drawable/button_black_rectangle"
                        android:textColor="#fff"
                        android:id="@+id/BookAppoinmentNext"
                        android:layout_marginTop="50dp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>