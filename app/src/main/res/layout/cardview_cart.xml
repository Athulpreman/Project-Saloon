<LinearLayout android:layout_height="350dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cvCart"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#88EBE9E9"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:stretchColumns="1"
                android:orientation="vertical">

                <TableRow>
                    <TextView
                        android:layout_width="150dp"
                        android:gravity="center"
                        android:text="Shop "
                        android:textSize="18dp"/>
                    <TextView android:text="........"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:background="@drawable/tesxbox_rectangle"
                        android:id="@+id/cvShopName"/>
                </TableRow>
                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="150dp"
                        android:gravity="center"
                        android:text="Date"
                        android:textSize="18dp"/>
                    <TextView android:text="........"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:background="@drawable/tesxbox_rectangle"
                        android:id="@+id/cvDate"/>
                </TableRow>
                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="150dp"
                        android:gravity="center"
                        android:text="Time"
                        android:textSize="18dp"/>
                    <TextView android:text="........"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:background="@drawable/tesxbox_rectangle"
                        android:id="@+id/cvTime"/>
                </TableRow>
                <TableRow android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="150dp"
                        android:gravity="center"
                        android:text="Status"
                        android:textSize="18dp"/>
                    <TextView android:text="........"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:background="@drawable/tesxbox_rectangle"
                        android:id="@+id/cvStatus"/>
                </TableRow>


            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginTop="25dp">


                <Button
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:text="View"
                    android:id="@+id/cvViewButton"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>