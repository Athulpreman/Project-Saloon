<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="#8B000000">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:id="@+id/opShopImg"
                    android:src="@drawable/hair"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop Name"
                        android:textColor="@color/textColor_white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:id="@+id/opShopName"
                        android:fontFamily="@font/metal_macabrea_ap"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shop ID"
                        android:id="@+id/opShopID"
                        android:textColor="@color/textColor_white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/destroy_earthbb_ap"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234567890"
                        android:textColor="@color/textColor_white"
                        android:textSize="18dp"
                        android:id="@+id/opOwnerNumber"
                        android:textStyle="bold"
                        android:fontFamily="@font/earwig_factory_rg_ap"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card8"
                        android:layout_width="80dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_height="89dp"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="45dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/location"
                            android:gravity="bottom" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TableRow android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="136dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#800325FF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/scan"
                        android:fontFamily="@font/hpunk_ap"
                        android:gravity="center"
                        android:text="Scan"
                        android:textColor="@color/textColor_white"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </TableRow>
            <TableRow android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="#803CCF1C"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/card2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/add_service"
                        android:gravity="center"
                        android:text="Add Service"
                        android:textColor="@color/textColor_white"
                        android:fontFamily="@font/hpunk_ap"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="#80E60416"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/card3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/booking_for_shop"
                        android:gravity="center"
                        android:text="Booking"
                        android:textColor="@color/textColor_white"
                        android:fontFamily="@font/hpunk_ap"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="#80FFB600"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/card4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/feedback"
                        android:gravity="center"
                        android:text="Feedbacks"
                        android:textColor="@color/textColor_white"
                        android:fontFamily="@font/hpunk_ap"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="#8000796B"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/card5">
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/complaints"
                        android:gravity="center"
                        android:text="Complaints"
                        android:textColor="@color/textColor_white"
                        android:fontFamily="@font/hpunk_ap"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </TableRow>
            <TableRow android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="#80717500"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/card6">


                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/logout"
                        android:gravity="center"
                        android:text="Log Out"
                        android:textColor="@color/textColor_white"
                        android:fontFamily="@font/hpunk_ap"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    app:cardBackgroundColor="#80C700FF"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/card7">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/about"
                        android:gravity="center"
                        android:text="About"
                        android:textColor="@color/textColor_white"
                        android:fontFamily="@font/hpunk_ap"
                        android:textSize="24dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>