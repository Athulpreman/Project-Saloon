<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/cardview_bg"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow>
                    <TextView android:text="Name"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="17dp"/>
                    <TextView android:text=":"
                        android:textAlignment="center"
                        android:textSize="17dp"/>
                    <TextView android:textSize="17dp"
                        android:text="aaa"
                        android:layout_weight="1"
                        android:id="@+id/ovcsName"
                        android:textAlignment="center"/>
                </TableRow>
                <TableRow android:layout_marginTop="7dp">
                    <TextView android:text="Mobile"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="17dp"/>
                    <TextView android:text=":"
                        android:textAlignment="center"
                        android:textSize="17dp"/>
                    <TextView android:textSize="17dp"
                        android:text="aaa"
                        android:layout_weight="1"
                        android:id="@+id/ovcsMobile"
                        android:textAlignment="center"/>
                </TableRow>
                <TableRow android:layout_marginTop="7dp">
                    <TextView android:text="Subject"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="17dp"/>
                    <TextView android:text=":"
                        android:textAlignment="center"
                        android:textSize="17dp"/>
                    <TextView android:textSize="17dp"
                        android:text="aaa"
                        android:layout_weight="1"
                        android:id="@+id/ovcsSubject"
                        android:textAlignment="center"/>
                </TableRow>

            </TableLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="17dp"
                    android:text="Description  :"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:textSize="17dp"
                    android:text="aaaa"
                    android:id="@+id/ovcsDescription"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>