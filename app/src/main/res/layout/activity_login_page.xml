<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Shop"
                android:textColor="@color/textColor"
                android:layout_marginTop="110dp"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L O G I N"
                android:textColor="@color/textColor"
                android:textSize="45dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Signin with Shop ID"
                android:textColor="@color/textColor"
                android:textSize="16dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/textColor"
                android:layout_marginLeft="20dp"
                android:inputType="text"
                android:layout_marginRight="20dp"
                android:textSize="19dp"
                android:maxLength="10"
                android:layout_marginTop="7dp"
                android:background="@drawable/textbox"
                android:paddingLeft="14dp"
                android:paddingRight="8dp"
                android:id="@+id/loginUserName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textColor="@color/textColor"
                android:layout_marginLeft="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:textSize="19dp"
                android:textColor="@color/textColor"
                android:layout_height="40dp"
                android:paddingRight="8dp"
                android:inputType="textPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/textbox"
                android:paddingLeft="14dp"
                android:id="@+id/loginUserPassword"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_marginTop="30dp">
                    <Button
                        android:layout_height="wrap_content"
                        android:layout_width="130dp"
                        android:text="Sing in"
                        android:textColor="@color/textColor_white"
                        android:id="@+id/loginSignInButton"
                        android:textSize="18dp"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/button_black_rectangle"/>
                    <TextView android:text="Forgot Password...??"
                        android:textColor="@color/textColor"
                        android:textStyle="italic"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/loginForgotPassword"
                        android:textSize="17dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center">

                <TableRow>
                    <TextView android:text="Don't have an account?"
                        android:textColor="@color/textColor"
                        android:layout_marginTop="40dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="65dp"
                        android:gravity="center"/>
                    <TextView android:text="Register!"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:textColor="@color/textColor"
                        android:id="@+id/loginRegisterTextView"
                        android:layout_marginTop="40dp"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>