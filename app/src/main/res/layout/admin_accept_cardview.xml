
<LinearLayout android:layout_height="350dp"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:gravity="top"
android:orientation="horizontal"
android:background="@drawable/bg10"
xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg9"
    app:cardBackgroundColor="#D5050505"
    android:layout_margin="8dp"
    app:cardCornerRadius="25dp">

    <LinearLayout android:layout_height="330dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:gravity="left">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hair"
                app:civ_border="true"
                android:id="@+id/cimg1"
                app:civ_border_width="7dp"
                app:civ_border_color="#FFFFFF"
                android:layout_height="150dp"/>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hair"
                android:id="@+id/cimg2"
                app:civ_border="true"
                app:civ_border_width="7dp"
                app:civ_border_color="#FFFFFF"
                android:layout_height="150dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/textboxround"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Owner Name"
                android:id="@+id/OwnerName"
                android:maxWidth="180dp"
                android:textColor="#fff"
                android:textSize="19dp"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Shop Name"
                android:maxWidth="180dp"
                android:id="@+id/ShopNamee"
                android:textColor="#fff"
                android:textSize="19dp"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Shop ID"
                android:id="@+id/ShopIDe"
                android:maxWidth="180dp"
                android:textColor="#fff"
                android:textSize="19dp"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Owner Number"
                android:textColor="#fff"
                android:maxWidth="180dp"
                android:id="@+id/Owerno"
                android:textSize="19dp"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Address"
                android:maxWidth="180dp"
                android:textColor="#fff"
                android:id="@+id/Addresse"
                android:maxHeight="30dp"
                android:textSize="19dp"
                android:layout_margin="10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="permit"
                android:textSize="19dp"
                android:textColor="#fff"
                android:background="@drawable/textboxregister"
                android:textStyle="bold"
                android:id="@+id/permitButton"/>

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>

</LinearLayout>